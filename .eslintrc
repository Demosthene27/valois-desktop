{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "babel",
    "mocha"
  ],
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "ipc": true,
    "PRODUCTION": true,
    "TEST": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "prefer-destructuring": "off",
    "func-names": "off",
    "global-require": "off",
    "new-cap": ["error", {
      "newIsCapExceptions": ["mnemonic"]
    }],

    "react/prop-types": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "./src/**/*.test.js",
        "./test/**/*.js",
        "./src/**/stories.js",
        "./src/tests.js",
        "./src/i18n-scanner.js"
        ]
      }
    ],
    "linebreak-style": 0,
    "no-param-reassign": "off",
    "complexity": ["error", 10],
    "max-depth": ["error", 3],
    "max-nested-callbacks": ["error", 3],
    "max-statements": ["error", 10],
    "max-lines": ["error", 300]
  },
  "overrides": [
    {
      "files": [ 
        "*.test.js",
        "*.spec.js"
      ],
      "rules": {
        "max-depth": ["error", 2],
        "max-nested-callbacks": ["error", 4],
        "max-statements": ["error", 30],
        "max-lines": ["error", 500]
      }
    }
  ],
  "settings": {
    "mocha/additionalTestFunctions": [
      "describeModule"
    ]
  }
}
